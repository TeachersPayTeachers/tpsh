#!/usr/bin/env bash

#####################################################################
##### GLOBAL VARIABLES                                          #####
#####################################################################

__TPSH__THIS_DIR="$(dirname $0)"
__TPSH__ARGS=""
__TPSH__CMD="help"
__TPSH__CMD_DIR="${__TPSH__THIS_DIR}/cmd"
__TPSH__CMD_PATH="${__TPSH__CMD_DIR}/${__TPSH__CMD}"

#####################################################################
##### PARSE CLI OPTIONS                                         #####
#####################################################################

if [ $# -gt 0 ]; then
    __TPSH__CMD="$1"
    shift
fi
__TPSH__ARGS="$@"
__TPSH__CMD_PATH="${__TPSH__CMD_DIR}/${__TPSH__CMD}"

#####################################################################
##### LOAD LIBRARY AND SUBPROGRAMS                              #####
#####################################################################

. ${__TPSH__THIS_DIR}/lib/logging

#####################################################################
##### MAIN PROGRAM                                              #####
#####################################################################

if [ ! -e "$__TPSH__CMD_PATH" ]; then
    $0 help --error "Not a valid command: $__TPSH__CMD"
else
    $__TPSH__CMD_PATH $__TPSH__ARGS
fi
