#!/usr/bin/env bash

#####################################################################
##### GLOBAL VARIABLES                                          #####
#####################################################################

__TPSH__CMD__PLATFORM__THIS_DIR="$(dirname $0)"
__TPSH__CMD__PLATFORM__LIB_DIR="${__TPSH__CMD__PLATFORM__THIS_DIR}/../lib"

#####################################################################
##### LOAD LIBRARIES                                            #####
#####################################################################

. "${__TPSH__CMD__PLATFORM__LIB_DIR}/platform"

#####################################################################
##### FUNCTIONS                                                 #####
#####################################################################

function tpsh_cmd_platform_version() {
    local args="$@"
    tpsh_lib_platform_version $args || return $?
}

#####################################################################
##### MAIN PROGRAM                                              #####
#####################################################################

tpsh_cmd_platform_version "$@"
