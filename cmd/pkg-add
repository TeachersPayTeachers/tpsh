#!/usr/bin/env bash

#####################################################################
##### GLOBAL VARIABLES                                          #####
#####################################################################

__TPSH__CMD__PKG_ADD__ARGS="$@"
__TPSH__CMD__PKG_ADD__THIS_DIR="$(dirname $0)"
__TPSH__CMD__PKG_ADD__LIB_DIR="${__TPSH__CMD__PKG_ADD__THIS_DIR}/../lib"

#####################################################################
##### LOAD LIBRARIES                                            #####
#####################################################################

. "${__TPSH__CMD__PKG_ADD__LIB_DIR}/logging"
. "${__TPSH__CMD__PKG_ADD__LIB_DIR}/pkg"
. "${__TPSH__CMD__PKG_ADD__LIB_DIR}/platform"

#####################################################################
##### FUNCTIONS                                                 #####
#####################################################################

function tpsh_cmd_pkg_add() {
    echo selecting pkgmgr for pkg
    local pkgmgr="$(tpsh_lib_pkg_select_pkgmgr $__TPSH__CMD__PKG_ADD__ARGS)"
}

#####################################################################
##### PARSE CLI OPTIONS                                         #####
#####################################################################

#####################################################################
##### MAIN PROGRAM                                              #####
#####################################################################

tpsh_cmd_pkg_add
